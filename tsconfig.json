{
    "compilerOptions": {
        "module": "commonjs",
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "target": "es6",
        "moduleResolution": "node",
        "sourceMap": true,
        "outDir": "dist",
        "experimentalDecorators": true,
        "typeRoots": [
            "./node_modules/@types",
        ],
        "skipLibCheck": true,
        "types": ["node", "mocha"]
    },
    "lib": [
        "es2015"
    ],
    "exclude": [
        "node_modules",
        "**/*.spec.ts",
        "test",
        "utils/mochaForVscode.ts"
    ]
}